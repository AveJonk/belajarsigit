<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Waduh</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Data Siswa</h1>
    
    <div class="text-right mb-3">
      <a href="/insert" class="btn btn-primary">Insert New Data</a>
    </div>
    
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">NIS</th>
          <th scope="col">Nama</th>
          <th scope="col">Kelas</th>
          <th scope="col">aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (data.length) { %>
          <% for (var i = 0; i < data.length; i++) { %>
            <tr>
              <th scope="row" class="text-center"><%= (i + 1) %></th>
              <td><%= data[i].nis %></td>
              <td><%= data[i].nama %></td>
              <td><%= data[i].kelas %></td>
              <td>
                <a href="edit/ <%= data[i].nis %>" class="btn btn-md btn-secondary mb-3">Ubah</a>
                <a href="delete/ <%= data[i].nis %>" class="btn btn-md btn-secondary mb-3">delete</a>
              </td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger text-center" role="alert">
                Data Tidak Ditemukan!
              </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
